<VirtualHost *:80>
    ServerAdmin <%= @server_admin %>
    ServerName <%= @server_name %>

    DocumentRoot <%= @document_root %>

    <Directory <%= @document_root %>>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>

    ErrorLog <%= @error_log %>
    LogLevel warn
    CustomLog <%= @access_log %> combined
</VirtualHost>